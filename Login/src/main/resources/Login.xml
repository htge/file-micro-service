<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <context:annotation-config/>

    <bean id="properties" class="com.htge.login.config.LoginProperties"/>

    <bean class="com.htge.login.boot.ApplicationStartup">
        <property name="properties" ref="properties"/>
        <property name="userinfoDao" ref="userinfoDao"/>
    </bean>

    <bean id="loginMap" class="com.htge.login.controller.Map.LoginMap">
        <property name="properties" ref="properties"/>
    </bean>

    <bean id="settingMap" class="com.htge.login.controller.Map.SettingMap">
        <property name="properties" ref="properties"/>
        <property name="userinfoDao" ref="userinfoDao"/>
    </bean>

    <bean id="deleteMap" class="com.htge.login.controller.Map.DeleteMap">
        <property name="userinfoDao" ref="userinfoDao"/>
    </bean>

    <bean id="changeMap" class="com.htge.login.controller.Map.ChangeMap">
        <property name="userinfoDao" ref="userinfoDao"/>
    </bean>

    <bean id="registerMap" class="com.htge.login.controller.Map.RegisterMap">
        <property name="userinfoDao" ref="userinfoDao"/>
    </bean>

    <bean id="userListMap" class="com.htge.login.controller.Map.UserListMap">
        <property name="properties" ref="properties"/>
        <property name="userinfoDao" ref="userinfoDao"/>
    </bean>
</beans>