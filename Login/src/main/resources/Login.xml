<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <context:annotation-config/>

    <bean id="properties" class="com.htge.login.config.LoginProperties"/>

    <bean id="loginManager" class="com.htge.login.util.LoginManager">
        <property name="simpleCookie" ref="simpleCookie"/>
        <property name="userinfoDao" ref="userinfoDao"/>
    </bean>

    <bean class="com.htge.login.config.WebConfig">
        <property name="taskExecutor" ref="threadPoolTaskExecutor"/>
    </bean>

    <bean id="changeMap" class="com.htge.login.controller.ChangeController">
        <property name="userinfoDao" ref="userinfoDao"/>
        <property name="loginManager" ref="loginManager"/>
    </bean>

    <bean id="deleteMap" class="com.htge.login.controller.DeleteController">
        <property name="userinfoDao" ref="userinfoDao"/>
        <property name="loginManager" ref="loginManager"/>
    </bean>

    <bean id="loginMap" class="com.htge.login.controller.LoginController">
        <property name="loginManager" ref="loginManager"/>
        <property name="properties" ref="properties"/>
    </bean>

    <bean id="registerMap" class="com.htge.login.controller.RegisterController">
        <property name="userinfoDao" ref="userinfoDao"/>
        <property name="loginManager" ref="loginManager"/>
    </bean>

    <bean id="settingMap" class="com.htge.login.controller.SettingController">
        <property name="userinfoDao" ref="userinfoDao"/>
        <property name="properties" ref="properties"/>
    </bean>

    <bean id="userListMap" class="com.htge.login.controller.UserListController">
        <property name="userinfoDao" ref="userinfoDao"/>
    </bean>

    <bean class="com.htge.login.controller.LogoutController">
        <property name="loginManager" ref="loginManager"/>
    </bean>
</beans>